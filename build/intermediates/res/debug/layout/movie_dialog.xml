<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15sp"
    android:padding="15sp" >
    
	<TextView
        android:id="@+id/movieQuestionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:paddingBottom="5dp"
        android:text="What movie isn't like the others?"
        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	<TextView
        android:id="@+id/movieCorrectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/movieQuestionTextView"
        android:paddingBottom="5dp"
        android:text="Correct Movie Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
    <TextView
        android:id="@+id/movieExplanationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieCorrectTextView"
        android:layout_centerHorizontal="true"
        android:text="Explanation"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/markerImageButton"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/movieExplanationTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:contentDescription="Event Image"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />
    
    <TextView
        android:id="@+id/incorrectChoiceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieDialogCloseButton"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Your Incorrect Selection"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/movieDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/markerImageButton"
        android:padding="5dp"
        android:text="Correct Movie summary"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/movieDialogCloseButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/movieDetailsTextView"
        android:layout_below="@+id/movieDetailsTextView"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:text="Close" />

</RelativeLayout><!-- From: file:/Users/jessemartinez/Documents/development/java_projects/movie-trivia/LoginScreenActivity/res/layout/movie_dialog.xml -->